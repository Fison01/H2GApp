<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="20dp" >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif-monospace"
                android:text="Please Fill the form"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>


        <EditText
            android:id="@+id/fname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_action_user"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/fname"
            android:inputType="textCapWords"
            android:maxLength="10"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/lname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_action_user"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/lname"
            android:inputType="textCapWords"
            android:maxLength="30"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_male"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_female" />
        </RadioGroup>


        <EditText
            android:id="@+id/DOB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@android:drawable/ic_menu_month"
            android:drawablePadding="8dp"
            android:focusable="auto"
            android:gravity="center_vertical"
            android:hint="@string/dob"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />
        <RadioGroup
            android:id="@+id/radioStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioSingle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_single"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioMaried"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_married" />
            <RadioButton
                android:id="@+id/radioDevorce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_devorce" />
        </RadioGroup>

        <EditText
            android:id="@+id/userEmailId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:drawablePadding="8dp"
            android:enabled="false"
            android:gravity="center_vertical"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_action_add"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/mobileNumber"
            android:inputType="phone"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/address"
            android:inputType="textCapWords"
            android:maxLength="30"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/rank"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@android:drawable/btn_star"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/rank"
            android:inputType="textCapWords"
            android:maxLength="6"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/deployment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@android:drawable/ic_dialog_map"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/deployment"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/job_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/job_location"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/h2gentrydate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/h2gentrydate"
            android:inputType="date"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/married_with"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_action_add"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/married_with"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/married_nbr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@android:drawable/stat_sys_phone_call_forward"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/married_nbr"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hints_color"
            android:textSize="16sp" />


        <CheckBox
            android:id="@+id/terms_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/terms_conditions"
            android:textColor="@color/white_greyish"
            android:textSize="14sp"
            tools:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/addNewBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_action_add"
            android:padding="3dp"
            android:text="@string/signUp"
            android:textColor="@color/hints_color"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/already_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/already_user"
            android:textColorHighlight="@color/white_greyish"
            android:textColor="@color/white_greyish"
            android:textSize="15sp" />

    </LinearLayout>
</ScrollView>